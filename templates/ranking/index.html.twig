{% extends 'front.html.twig' %}

{% block title %}{{ 'app_ranking_index'|trans({}, 'routes') }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h5 class="text-center my-3">{{ 'app_ranking_index'|trans({}, 'routes') }}</h5>
            <table class="table table-sm table-bordered table-hover mb-5">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 64px;">{{ 'ranking.place'|trans({}, 'forms') }}
                        <th>{{ 'ranking.username'|trans({}, 'forms') }}</th>
                        <th>{{ 'ranking.points'|trans({}, 'forms') }}
                    </tr>
                </thead>
                <tbody>
                    {% set place = 1 %}
                    {% for row in ranking %}
                    <tr class="{{ (app.user and row.username == app.user.username) ? 'table-success' : '' }}">
                        <td>{{ place }}</td>
                        <td>{{ row.username }}</td>
                        <td>{{ row.points }}</td>
                    </tr>
                    {% set place = place + 1 %}
                    {% endfor %}
                </tbody>
            </table><br>
        </div>
    </div>
</div>
{% endblock %}
